#menu
  display: none
  position: fixed
  width: 100%
  top: 0
  right: 0
  left: 0
  height: 100%
  z-index: 200
  background-color: #27578c
  overflow-y: scroll
  text-align center

  a
    color: white
    text-decoration: none

    &:hover
      color #231f20
    &.active
      color #00b3e6

  .menu-container
    col(1/2, .23)
    margin-top: 3em

    ul
      list-style-type: none
      font-size: 2.5em

      @media screen and (max-width: 424px)
        font-size: 2em

#footer
  position: fixed
  width: 10%
  bottom: 0
  left: 0
  height: 50px
  z-index: 300
