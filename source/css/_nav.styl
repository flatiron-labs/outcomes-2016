#nav
  position: fixed
  width: 100%
  top: 0
  right: 0
  left: 0
  height: 50px
  z-index: 300

.social-container
  position fixed
  bottom 10px
  right 50px
  col(1/3)
  text-align: right

.facebook-icon
  background-image: url('//d280vzogkide3l.cloudfront.net/icons/facebook_icon.svg')
  background-repeat: no-repeat
  margin: 0.3em
  height: 1.5em
  width: 1.5em
  float: right

.twitter-icon
  background-image: url('//d280vzogkide3l.cloudfront.net/icons/twitter_icon.svg')
  background-repeat: no-repeat
  margin: 0.3em
  height: 1.5em
  width: 1.5em
  float: right

.logo-container
  position: fixed
  width: 7%
  top: 1%
  left: 2%

  @media screen and (max-width: 767px) {
    width: 75px
    top: 5px
    left: 5px
  }

.flatiron-container
  width: 100%
  z-index: 301

.nav-btn-container
  position: fixed
  top: 2%
  right: 40px

.hamburger-container
  position: fixed
  top: 1.6%
  right: 1%
  color: white

#hamburger-menu
  background-image: url('//d280vzogkide3l.cloudfront.net/outcomes_assets/hamburger-icon.svg')
  background-repeat: no-repeat
  height: 1.5em
  width: 28px

.btn {
  border-radius: 10px
  color: #21A8D0
  background: white
  padding: 10px 20px 10px 20px
  text-decoration: none
  margin: 0.25em
}

.btn:hover {
  background:#fafafa
  text-decoration: none
}

@media screen and (max-width: 767px)
  .social-container
    right: 0px

@media screen and (max-width: 424px)
  .nav-btn-container
    right: 0px
