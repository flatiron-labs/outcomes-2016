.bg
  background-size cover !important
  background-position: center !important

.section
  height 100vh
  width 100%
  position relative
  overflow hidden

.fixed-section
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  a
    color: black

  .centering-container
    center(970px)

.section-content
  width 100%
  position fixed

.divided-section-content
  width 100%
  position fixed

  a
    text-decoration none
    border-bottom 2px solid black

    &:hover
      color white
      border-color white
      transition 0.1s all linear

  p
    margin-top 12px

  .date
    margin 12px 0

  .event-left
    col(1/2)
    margin-left -40px

    .event-left-content
      float right
      text-align right
      width 80%

      @media screen and (min-width: 1200px)
        width: 530px

  .event-right
    col(2/5, 1/2)
    padding-left 60px

    @media screen and (min-width: 1200px)
      width: 515px

  .event-left, .event-right
    margin-top -50px

.three-col-container
  col(1/3)

  .header-img-container
    border-bottom 1px solid white
    padding 20px 5px 13px 0

    &:after
      content ' '
      display block
      clear both

    .img-col
      col(1/3)

    img
      display block
      max-height 65px

  .byline
    @extend .subhead-light-text
    padding-bottom 3em
    border-bottom 1px solid white
    margin 1em 0

  .quote-container
    .quote-icon
      float left
      width 1em

    p
      span(.92)
      float right
      margin 0 0 1em

    .quote
      col(.25, .10)
    .twitter-handle
      span(.3)
      @extend .small-text
      position relative
      top 10px

    .profile-container
      height 4em

      .label
        span(.78)
        margin 0

.layout-one-container
  position fixed
  top 50%
  left 50%
  transform translate(-50%, -50%)
  -webkit-transform translate(-50%, -50%)
  width 100%

  .three-col-container
    col(1/3)

    .quote-icon
      display block
#first
  @keyframes arrow
    from
      bottom: 8%
    to
      bottom: 7%

  &.section
    background-color #00b3e6

  .slide-static-content
    -webkit-animation: arrow 1s alternate infinite
    -moz-animation: arrow 1s alternate infinite
    animation: arrow 1s alternate infinite

    img
      height 3em
      width 3em

.first
  text-align: center
  @extend .white-text

  .sub-title
    center(80%)
    font 54px NimbusSan-Reg
    margin-bottom 0.5em

  .years
    font 40px NimbusSanCon-Bol
    center(50%)

.outcomes .two-col-container
  col(1/3, .1)

  @media screen and (max-width: 424px)
    width:75%
    padding: 3em 0

#second
