.second
  text-align: center

  .quote-container
    position: fixed
    top: 50%
    transform translate(0, -50%)
    -webkit-transform translate(0, -50%)
    width: 100%

  .quote-image
    center(4em)
    background-image: url('//d280vzogkide3l.cloudfront.net/icons/quote_icon.svg')
    background-repeat: no-repeat
    height: 3.5em
    margin-bottom 3em

  .quote
    @extend .white-text
    @extend .medium-text
    margin 0 auto
    padding 0
    display block
    float none
    max-width 70%

  .author
    center(400px)
    color: #231f20
    margin-top 3em
    text-transform uppercase

.accountability, .resources

  .title-container
    transform translate(0, -50%)
